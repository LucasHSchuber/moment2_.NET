@model moment2_mvc.Models.TaskModel

@{
    ViewData["Title"] = "About me";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4 mb-5">About me</h1>
    </div>

    <div class="d-flex justify-content-center">
        <img src="~/images/lucas_edit.jpg" alt="profile pic" class="profile-pic">
        <div class="px-5">
            <h4>Lucas H. Schuber</h4>
            <p>@ViewData["Bio"]</p>
            <h5>Have a look at my GitHub?</h5>
            <a href="@ViewBag.GitHub" target="_blank">@ViewBag.GitHub</a>
        </div>
    </div>


    <div class="social">
        @Html.Partial("_Partial", Model)
    </div>

</div>


<style>
    .profile-pic {
        width: 300px;
        height: auto;
        display: block;
        margin: 0 auto;
        border-radius: 3%;
    }

</style>