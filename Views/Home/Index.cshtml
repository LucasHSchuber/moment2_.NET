@model IEnumerable<moment2_mvc.Models.TaskModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">All tasks</h1>
    </div>

    <div class="py-3">
        <h2>Task List</h2>
    </div>

    <div class="row">
        @foreach (var task in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@task.Id . @task.Title</h5>
                        <p class="card-text">@task.Description</p>
                    
                    </div>
                </div>
                <a href="#" onclick="confirmAndRemove('@task.Id')">Remove Task</a>

            </div>
        }
    </div>
</div>

<script>
    function confirmAndRemove(id, event) {
        event.preventDefault();
        console.log("test");
        if (confirm('Are you sure you want to remove this task?')) {
            window.location.href = '/Home/Remove/' + id;
        }
    }
</script>
